@model Usuarios

@{
    ViewData["Title"] = "Editar Usuario";
}

<div class="pagetitle">
    <h1>Usuarios</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></li>
            <li class="breadcrumb-item"><a asp-action="Index">Usuarios</a></li>
            <li class="breadcrumb-item active">Editar Usuario</li>
        </ol>
    </nav>
</div>

<section class="section dashboard">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title text-primary">Editar Usuario</h5>

            <form class="row g-3" asp-action="Edit" method="POST">

                <input type="hidden" asp-for="Id" />

                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="Nombre" class="form-control" id="floatingNombre" placeholder="@Html.DisplayFor(model => model.Nombre)">
                        <label for="floatingNombre">Nombre</label>
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="Email" class="form-control" id="floatingEmail" placeholder="@Html.DisplayFor(model => model.Email)">
                        <label for="floatingEmail">Email</label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="Telefono" class="form-control" id="floatingTelefono" placeholder="@Html.DisplayFor(model => model.Telefono)">
                        <label for="floatingTelefono">Teléfono</label>
                        <span asp-validation-for="Telefono" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="Rol" class="form-control" id="floatingRol" placeholder="@Html.DisplayFor(model => model.Rol)">
                        <label for="floatingRol">Rol</label>
                        <span asp-validation-for="Rol" class="text-danger"></span>
                    </div>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                    <a asp-action="Index" class="btn btn-secondary">Volver</a>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
