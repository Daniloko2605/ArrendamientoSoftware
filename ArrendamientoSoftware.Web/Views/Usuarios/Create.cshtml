@model Usuarios

@{
    ViewData["Title"] = "Nuevo Usuario";
}

<div class="pagetitle">
    <h1>Usuarios</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></li>
            <li class="breadcrumb-item"><a asp-action="Index">Usuarios</a></li>
            <li class="breadcrumb-item active">Nuevo Usuario</li>
        </ol>
    </nav>
</div>
<section class="section dashboard">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title text-primary">Nuevo Usuario</h5>

            <form class="row g-3" asp-action="Create" method="POST">
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="Nombre" class="form-control" id="floatingNombre" placeholder="@Html.DisplayFor(model => model.Nombre)">
                        <label for="floatingNombre">Nombre</label>
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="Email" class="form-control" id="floatingEmail" placeholder="@Html.DisplayFor(model => model.Email)">
                        <label for="floatingEmail">Email</label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="PhoneNumber" class="form-control" id="floatingPhoneNumber" placeholder="@Html.DisplayFor(model => model.PhoneNumber)">
                        <label for="floatingTPhoneNumber">@Html.DisplayFor(model => model.PhoneNumber)</label>
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                    <a asp-action="Index" class="btn btn-secondary">Volver</a>
                </div>
            </form>

        </div>
    </div>
</section>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
