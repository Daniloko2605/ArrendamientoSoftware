@model Propiedades

@{
    ViewData["Title"] = "Nueva Propiedad";
}

<div class="pagetitle">
    <h1>Propiedades</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Inicio</a></li>
            <li class="breadcrumb-item"><a asp-action="Index">Propiedades</a></li>
            <li class="breadcrumb-item active">Nueva Propiedad</li>
        </ol>
    </nav>
</div>


<section class="section dashboard">


    <div class="card">
        <div class="card-body">
            <h5 class="card-title text-primary">Nueva Propiedad</h5>

            <form class="row g-3" asp-action="Create" method="POST">
                <div class="col-md-12">
                    <div class="form-floating">
                        <input asp-for="Id" class="form-control" id="floatingName" placeholder="@Html.DisplayFor(model => model.Id)">
                        <label asp-for="Id"></label>
                        <span asp-validation-for="Id" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-floating">
                        <input asp-for="Descripcion" class="form-control" descripcion="floatingName" placeholder="@Html.DisplayFor(model => model.Descripcion)">
                        <label asp-for="Descripcion"></label>
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-floating">
                        <input asp-for="Ciudad" class="form-control" ciudad="floatingName" placeholder="@Html.DisplayFor(model => model.Ciudad)">
                        <label asp-for="Ciudad"></label>
                        <span asp-validation-for="Ciudad" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-floating">
                        <input asp-for="Direccion" class="form-control" direccion="floatingName" placeholder="@Html.DisplayFor(model => model.Direccion)">
                        <label asp-for="Direccion"></label>
                        <span asp-validation-for="Direccion" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-floating">
                        <input asp-for="Precio" class="form-control" precio="floatingName" placeholder="@Html.DisplayFor(model => model.Precio)">
                        <label asp-for="Precio"></label>
                        <span asp-validation-for="Precio" class="text-danger"></span>
                    </div>
                </div>


                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                    <a asp-action="Index" class="btn btn-secondary">Volver</a>
                </div>
            </form>

        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

