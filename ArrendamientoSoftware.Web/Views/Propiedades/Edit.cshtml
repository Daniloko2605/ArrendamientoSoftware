@model Propiedades

@{
    ViewData["Title"] = "Editar Propiedad";
}

<div class="pagetitle">
    <h1>Propiedades</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></li>
            <li class="breadcrumb-item"><a asp-action="Index">Propiedades</a></li>
            <li class="breadcrumb-item active">Editar Propiedad</li>
        </ol>
    </nav>
</div>

<section class="section dashboard">

    <div class="card">
        <div class="card-body">
            <h5 class="card-title text-primary">Editar Propiedad</h5>

            <form class="row g-3" asp-action="Edit" method="POST">

                <input type="hidden" asp-for="Id" />

      
                <div class="col-md-12">
                    <div class="form-floating">
                        <input asp-for="Tipo" class="form-control" id="floatingTipo" placeholder="Tipo de propiedad" />
                        <label asp-for="Tipo"></label>
                        <span asp-validation-for="Tipo" class="text-danger"></span>
                    </div>
                </div>


                <div class="col-md-12">
                    <div class="form-floating">
                        <input asp-for="Direccion" class="form-control" id="floatingDireccion" placeholder="Dirección" />
                        <label asp-for="Direccion"></label>
                        <span asp-validation-for="Direccion" class="text-danger"></span>
                    </div>
                </div>

 
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="Ciudad" class="form-control" id="floatingCiudad" placeholder="Ciudad" />
                        <label asp-for="Ciudad"></label>
                        <span asp-validation-for="Ciudad" class="text-danger"></span>
                    </div>
                </div>


                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="Precio" class="form-control" id="floatingPrecio" placeholder="Precio" type="number" />
                        <label asp-for="Precio"></label>
                        <span asp-validation-for="Precio" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-floating">
                        <textarea asp-for="Descripcion" class="form-control" id="floatingDescripcion" placeholder="Descripción"></textarea>
                        <label asp-for="Descripcion"></label>
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="Estado" class="form-control" id="floatingEstado" placeholder="Estado" />
                        <label asp-for="Estado"></label>
                        <span asp-validation-for="Estado" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="Owner" class="form-control" id="floatingOwner" placeholder="Propietario" />
                        <label asp-for="Owner"></label>
                        <span asp-validation-for="Owner" class="text-danger"></span>
                    </div>
                </div>

               
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="IdOwner" class="form-control" id="floatingIdOwner" placeholder="ID Propietario" type="number" />
                        <label asp-for="IdOwner"></label>
                        <span asp-validation-for="IdOwner" class="text-danger"></span>
                    </div>
                </div>

             
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="CreatedDate" class="form-control" id="floatingCreatedDate" placeholder="Fecha de Creación" type="date" />
                        <label asp-for="CreatedDate"></label>
                        <span asp-validation-for="CreatedDate" class="text-danger"></span>
                    </div>
                </div>

            
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="UpdatedDate" class="form-control" id="floatingUpdatedDate" placeholder="Fecha de Actualización" type="date" />
                        <label asp-for="UpdatedDate"></label>
                        <span asp-validation-for="UpdatedDate" class="text-danger"></span>
                    </div>
                </div>

            
                <div class="col-md-12">
                    <div class="form-check">
                        <input asp-for="IsHidden" class="form-check-input" type="checkbox" id="floatingIsHidden" />
                        <label asp-for="IsHidden" class="form-check-label">¿Está disponible?</label>
                        <span asp-validation-for="IsHidden" class="text-danger"></span>
                    </div>
                </div>

          
                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                    <a asp-action="Index" class="btn btn-secondary">Volver</a>
                </div>
            </form>

        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}